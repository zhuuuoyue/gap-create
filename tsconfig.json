{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "ES6"],
    "module": "commonjs",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
